/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.banner{
  width:100%;
  height: auto;
}
.banner>image{
  width:100%;
}
.movieDel{
  display: flex;
  width:100%;
}
.movieimg{
  width:30%;
  margin:5px 8px;
}
.movieimg>image{
  width:100%;
  height: 150px;
}
.moviename{
  width:70%;
}
.moviename>view{
  font-size: 14px;
  line-height: 20px;
}
.moviename>view>text{
  padding-right:6px;
}